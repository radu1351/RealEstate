<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Imobiliare.DetailsPage"
             Title="DetailsPage">


    <ContentPage.Content>
        <Grid Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Image on the left -->
            <Image Grid.Column="0" Source="{Binding ImageUrl}" Aspect="AspectFit" HeightRequest="300" VerticalOptions="StartAndExpand" />

            <!-- Details on the right -->
            <StackLayout Grid.Column="1" Padding="10">
                <Label Text="{Binding Name}" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Start" />
                <Label Text="{Binding Price, StringFormat='â‚¬{0:F2}'}" FontSize="Medium" HorizontalOptions="Start" />
                <Label Text="{Binding Adress}" FontSize="Small" HorizontalOptions="Start" />
                <Label Text="{Binding Description}" FontSize="Small" HorizontalOptions="Start" />
                <Image x:Name="GoogleMapImage" Aspect="Center" HeightRequest="200" VerticalOptions="StartAndExpand" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>


</ContentPage>